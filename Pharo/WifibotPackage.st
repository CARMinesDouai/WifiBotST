PhaROSPackage subclass: #WifibotPackage	instanceVariableNames: 'bot'	classVariableNames: ''	poolDictionaries: ''	category: 'WifibotPackage'!!WifibotPackage methodsFor: 'initialization' stamp: 'NouryBouraqadi 9/25/2018 11:43'!botVelocity: twist	bot 		forwardSpeed: twist linear x;		rotationSpeed: twist angular z;		step! !!WifibotPackage methodsFor: 'initialization' stamp: 'NouryBouraqadi 9/25/2018 11:43'!initVelocitySubscriber	(self controller node buildConnectionFor: '/cmd_vel')		typedAs: 'geometry_msgs/Twist';		for: [ : velocity | self botVelocity: velocity ];		connect! !!WifibotPackage methodsFor: 'scripts' stamp: 'NouryBouraqadi 9/25/2018 11:44'!scriptStart	bot := SimpleReactiveWifiBot bodyIp: #[192 168 0 130].	self initVelocitySubscriber.! !